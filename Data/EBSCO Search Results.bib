Keywords = {causal attributions, schizophrenia, expressed emotion, stigma, relapse, China, Attribution, Expressed Emotion, Relapse (Disorders), Schizophrenia, Stigma, Family Members},
School = {ProQuest Information & Learning},
Title = {Causal attributions about schizophrenia in families in China: Expressed emotion, perceived stigma and patient relapse},
