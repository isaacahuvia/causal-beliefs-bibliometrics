@masterthesis{2017-05712-26220170101,
Abstract = {Background: Major depression is highly prevalent and disabling mental health condition. Antidepressant medication and cognitive behavioral therapy (CBT) are two of the most effective and widely used treatments for depression. Some research suggests that various causal attributions for depression may differentially effect treatment specific credibility and outcome expectancy. Purpose: The purpose of the current study was to examine the impact of biological and cognitive behavioral explanations on treatment credibility, outcome expectancy, and intentions to initiate antidepressant medication and CBT among a sample of participants meeting criteria for a current major depressive episode. Methods: The sample (N = 157) was recruited using Amazon.com's Mechanical Turk crowd sourcing marketplace. Participants were randomly assigned to one of three active conditions describing their symptoms as being caused by biological, cognitive behavioral, multi-causal (combination of biological and cognitive behavioral), or a no-information control group. Next, participants read descriptions of antidepressant medication and CBT treatments. Following each description, participants completed measures of treatment credibility, outcome expectancy, and intention to initiate the treatment. Three separate 2 (antidepressant medication vs. CBT) x 4 (biological, cognitive behavioral, multi-causal, or no-information control) mixed model ANOVAs and a series of planned contrasts were used to examine group differences. Results: Treatment credibility was significantly greater in the CBT condition compared to the antidepressant medication condition, p = .007, across all explanatory conditions. However, there were no other significant main-effects of treatment condition or explanatory condition on treatment credibility, expectancy, of willingness to initiate treatment. Similarly, the interaction of treatment and explanatory conditions did not significantly predict treatment credibility, expectancy, or intention to initiate treatment, all p's > .05. Planned contrasts showed no significant differences in causal explanatory condition treatment credibility, expectancy, or willingness to initiate treatment for antidepressant medication or CBT, all p's > .05. Conclusion: Causal explanations had no impact on treatment credibility, outcome expectancy, or willingness to initiate either treatment for depression. Overall, participants reported very low willingness to initiate treatment for their depressive symptoms. (PsycINFO Database Record (c) 2017 APA, all rights reserved)},
Author = {Lee, Aaron},
Keywords = {treatment types, attitudes formation, depression treatment, symptoms, Attitude Formation, Major Depression, Treatment Outcomes, Symptoms},
School = {ProQuest Information & Learning},
Title = {The effects of causal explanations and treatment type on attitudes toward depression treatment},
URL = {http://proxy.library.stonybrook.edu/login?url=https://search.ebscohost.com/login.aspx?direct=true&db=psyh&AN=2017-05712-262&site=ehost-live&scope=site},
Year = {2017},
}


@masterthesis{2017-05714-09420170101,
Abstract = {This study examined the effects of causal attributions on posttraumatic stress disorder (PTSD) literacy outcomes. Adult participants (N = 644) resided in the United States and completed an online questionnaire through Amazon Mechanical Turk. The vignette study design was 3 (trauma type: military combat versus accident versus rape) x 2 (vignette character gender: male versus female) x 2 (participant gender: male versus female). It was hypothesized that PTSD literacy outcomes would be greatest for the military condition, followed by accident, followed by rape. Female participants were expected to have greater PTSD literacy than males. All participants were expected to recommend female vignette characters seek psychological help more than male characters. It was also hypothesized that blame would differ among trauma types and that anger and pity would mediate the relationships between blame and PTSD literacy attitudinal outcomes. The hypotheses were partially supported. Overall, the results reflected high levels of PTSD literacy in this sample. Personal mental health experience predicted greater PTSD literacy. Participants randomized to the military condition recognized that the vignettes depicted a mental health problem and PTSD with greater frequency than those in the other conditions. Participants in the rape condition recommended the vignette characters seek psychological help more than those in the other conditions. Compared to male participants, females indicated that the vignettes depicted more serious problems in functioning. There was a lack of findings for vignette character gender. No differences in character blame were found; thus, attribution theory was not supported as the explanatory mechanism for differences in PTSD literacy across conditions. However, anger and pity fully mediated the relationships between blame and willingness to help the character and blame and avoidance of the character regardless of condition; attribution theory was supported in this regard. Also, pity fully mediated the relationships between blame and degree of problem and blame and helpfulness of treatment. Future research should examine how other attributional biases may account for PTSD literacy differences among trauma types. Findings can be used to help training programs target populations low in PTSD literacy and highlight the effects of emotional reactions to PTSD on helping behaviors. (PsycINFO Database Record (c) 2017 APA, all rights reserved)},
Author = {Magda, Lori A.},
Keywords = {blame, causal attributions, trauma, gender type, posttraumatic stress disorder, health literacy, Human Sex Differences, Posttraumatic Stress Disorder, Trauma, Health Literacy, Blame},
School = {ProQuest Information & Learning},
Title = {Who is to blame? The effects of causal attributions, trauma type, and gender on posttraumatic stress disorder literacy},
URL = {http://proxy.library.stonybrook.edu/login?url=https://search.ebscohost.com/login.aspx?direct=true&db=psyh&AN=2017-05714-094&site=ehost-live&scope=site},
