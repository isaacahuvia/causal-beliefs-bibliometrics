@masterthesis{2006-99023-15120060101,
Abstract = {The phrase 'folk psychology' refers to the ordinary psychology we use to understand each other and ourselves. Although folk psychology may initially seem to be a rather simple sort of thing, it can actually be surprisingly difficult to figure out precisely how it works. One common view is that folk psychology is best understood as a tool for predicting and explaining behavior. The key idea here is that, if we attribute mental states to other people, we will be able to do a better job of predicting and explaining the behaviors they subsequently perform. Philosophers who hold this view often suggest that folk psychology is something like a scientific theory. The present dissertation argues for a radically different view. It suggests that folk psychology might be better understood as a kind of multi-purpose tool. Specifically, the claim is that folk psychology should be understood as a tool not only for generating predictions and explanations but also for generating moral judgments. The dissertation begins with a general theoretical defense of this approach. It then proceeds to apply the approach to three major aspects of folk psychology. The first of these is people's ordinary concept of intentional action. A series of experiments demonstrate that people's attributions of intentional action in particular cases can actually be influenced by their moral beliefs. This result suggests that moral considerations may actually be playing a role in the concept of intentional action itself. The second aspect is our ordinary practice of reason explanation. Here again, a series of experiments demonstrate the role of moral considerations and thereby suggest that morality may play a role in the relevant concepts. The final aspect to be considered is people's practice of causal attribution. Moral considerations have long been known to play a role in this practice; the claim defended here is that this role is best understood in terms of the nature of the concept of causation itself. (PsycINFO Database Record (c) 2016 APA, all rights reserved)},
Author = {Knobe, Joshua Michael},
Keywords = {folk psychology, folk morality, mental states, moral judgments, attributions, Attribution, Folk Psychology, Moral Development, Morality, Mental Health},
School = {ProQuest Information & Learning},
Title = {Folk psychology, folk morality},
URL = {http://proxy.library.stonybrook.edu/login?url=https://search.ebscohost.com/login.aspx?direct=true&db=psyh&AN=2006-99023-151&site=ehost-live&scope=site},
Year = {2006},
}


@masterthesis{2006-99002-01920060101,
Abstract = {This study was designed to investigate social attribution processes as they pertained to reactions towards an individual with mental illness. Participants (N = 187) read a vignette describing an individual with one of three psychological disorders (schizophrenia, depression, ADHD). The information manipulated in the vignette included: the type of disorder, whether a formal diagnostic label was attached to the individual or only a description of the defining behavioral problems, and whether there was any situational information provided related to the individual's difficulties. Participants answered multi-question measures about the perceived causes of the individual's problem, perceived controllability, perceived stability of the condition, and perceived violence potential. In addition, participants reported affective reactions and social distance preferences. Data were subjected to a series of 3 x 2 x 2 MANOVAs and ANOVAs. Presence of Diagnostic Label significantly affected causal, stability, and controllability attributions of participants. Labeling also resulted in more positive affective reactions toward the target experiencing ADHD but had no significant impact on social distance preferences. Type of Diagnosis also yielded numerous significant effects in terms of perceived causality, stability, and affective reactions, particularly for the vignette depicting depressive difficulties. Presence of Situation significantly affected participants' causality attributions. Situational information led to greater positive affect, but only for those vignettes not containing a diagnostic label. While independent variables had numerous significant main effects, Situation X Diagnosis interactions, particularly those involving judgments of depressed targets, were most informative. Participants' familiarity and experience with those with mental illnesses had no main effects for any of the dependent variables. However, a significant three-way interaction effect for Situation X Diagnosis X Familiarity occurred in terms of social distance preferences. The study is considered within the context of the 'signaling event-attribution-affect-action' model of Corrigan (1998, 2000, 2004). (PsycINFO Database Record (c) 2016 APA, all rights reserved)},
