Keywords = {mothers attributions, sibling children, mental states, family, Mental Health, Mother Child Relations, Mothers, Siblings, Attribution, Family},
School = {ProQuest Information & Learning},
Title = {Mothers' attributions about their sibling children's behaviors and mental states},
