Keywords = {causal attributions, mental illness, stigma, psychological inflexibility, Attribution, Causality, Mental Disorders, Schizophrenia, Stigma, Blame, Pessimism, Prognosis},
School = {ProQuest Information & Learning},
Title = {Causal attributions and mental illness stigma: The role of psychological inflexibility},
