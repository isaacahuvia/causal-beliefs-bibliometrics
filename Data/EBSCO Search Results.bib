ISSN = {2054-4251},
Journal = {Global Mental Health},
Keywords = {Etiology, mental health, qualitative research, refugee populations, suicide, Refugees, Suicide, Etiology, Mental Health, Qualitative Methods},
Title = {‘Hiding their troubles’: A qualitative exploration of suicide in Bhutanese refugees in the USA},
