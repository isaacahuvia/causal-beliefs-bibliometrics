Journal = {Current Psychology: A Journal for Diverse Perspectives on Diverse Psychological Issues},
Keywords = {Stigma, Essentialism, Schizophrenia, Genetics, No terms assigned},
Title = {Testing the mixed-blessings model: What is the role of essentialism for stigmatizing attitudes towards schizophrenia?},
URL = {daniel.dittrich@medizin.uni-leipzig.de, ORCID: 0000-0003-4140-4688, ORCID: 0000-0002-9281-8461, ORCID: 0000-0002-6752-463X},
