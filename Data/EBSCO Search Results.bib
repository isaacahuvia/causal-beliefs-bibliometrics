Keywords = {stigma, mental illness, causal beliefs, social distance, cross-cultural psychology, Cross Cultural Psychology, Immigration, Mental Disorders, Stigma, Attribution, Psychological Distance},
Title = {Stigma of mental illness in Germans and Turkish immigrants in Germany: The effect of causal beliefs},
