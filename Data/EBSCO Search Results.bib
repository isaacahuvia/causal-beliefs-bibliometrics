Keywords = {mental illness, stigma, causal attributions, perceived dangerousness, political ideology, discrimination, behavioral response, Attribution, Dangerousness, Mental Illness (Attitudes Toward), Stigma, Disability Discrimination, Disease Course, Political Attitudes, Ideology},
